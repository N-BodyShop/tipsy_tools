uniform vec3 transvec; 
attribute vec3 vel; 
uniform float vecscale; 
attribute float type; 

void main() { 
	gl_Position=gl_ModelViewProjectionMatrix*gl_Vertex;
	if(type>3.0) gl_FrontColor = vec4(gl_Color[0],gl_Color[1],gl_Color[2],transvec[2]); 
	else if(type>2.0) gl_FrontColor = vec4(gl_Color[0],gl_Color[1],gl_Color[2],transvec[1]); 
	else gl_FrontColor = vec4(gl_Color[0],gl_Color[1],gl_Color[2],transvec[0]); 
}